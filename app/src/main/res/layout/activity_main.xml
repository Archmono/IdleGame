<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alucardc.idlegame.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bg1_bottom" />

        <ImageView
            android:id="@+id/enter_scene_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="enter_scene_1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/scene_1_icon" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:background="#0000"
            app:srcCompat="@drawable/btn_right" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="#0000"
            app:srcCompat="@drawable/btn_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="130dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/pollution_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="vertical">

            <include
                android:id="@+id/playerStatusBar"
                layout="@layout/player_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></include>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ad_banner" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tv_scenes1"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/tvEnemy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="16dp"
                android:text="Enemy : "
                android:textColor="#FFF"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPollution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="125dp"
            android:layout_marginLeft="16dp"
            android:text="Pollution"
            android:textColor="#FFF"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnHandBook"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/book" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="btnInventory"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/inventory" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/shop" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/trade" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/options" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>