<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="right">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/button_dark_65">

            <TextView
                android:id="@+id/tvPlayerMoney"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:text=" "
                android:textColor="#FFF" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/coin" />

        </FrameLayout>

        <Button
            android:id="@+id/btnComposite"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/bottom_dark_65"
            android:text="合成"
            android:textColor="#FFF" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/inventory"
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/button_dark_65"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inventory_selectedItem_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/bottom_dark_65" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/inventory_selectedItem_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/inventory_selectedItem_counts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/inventory_selectedItem_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/inventory_selectedItem_heal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/inventory_selectedItem_poison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/inventory_selectedItem_cure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFF" />
                </LinearLayout>

                <Button
                    android:id="@+id/inventory_btnSell"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/button_dark_65"
                    android:text="sell"
                    android:textColor="#FFF" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/inventory_itemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="TextView"
                    android:textColor="#FFF"
                    android:textSize="14dp" />

            </ScrollView>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="277dp"
                    android:layout_height="250dp"
                    android:background="@drawable/button_dark_65">

                    <LinearLayout
                        android:id="@+id/inventory_bottomBag"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="left"
                        android:orientation="vertical" />
                </ScrollView>

                <LinearLayout
                    android:layout_width="26dp"
                    android:layout_height="300dp"
                    android:layout_gravity="right"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/inventory_btnAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_tag_darkon"
                        android:text="全\n部"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/inventory_btnMaterial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_tag_darkoff"
                        android:text="素\n材"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/inventory_btnConsumables"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_tag_darkoff"
                        android:text="\n消\n耗\n品\n"
                        android:textColor="#FFF" />
                </LinearLayout>


            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

</FrameLayout>